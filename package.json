{
  "name": "mongoose-collection-name",
  "version": "1.0.0",
  "description": "Mongoose plugin to name collections based on naming convention camelCase, snake_case, PascalCase, ...etc",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "lint": "eslint lib/**/*.ts",
    "lint:fix": "eslint lib/**/*.ts --fix",
    "format": "prettier --write lib/**/*.ts",
    "precommit": "lint-staged",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prerelease": "npm run build",
    "test": "jest",
    "prepare": "husky"
  },
  "keywords": [
    "mongoose",
    "mongodb",
    "plugin",
    "nodejs",
    "javascript",
    "typescript"
  ],
  "files": [
    "dist",
    "index.js",
    "index.d.ts"
  ],
  "author": "Mohamed Kamel",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-angular": "19.6.0",
    "@eslint/js": "^9.17.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.3",
    "@typescript-eslint/eslint-plugin": "8.19.0",
    "@typescript-eslint/parser": "8.19.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.5",
    "typescript": "5.7.2"
  },
  "peerDependencies": {
    "mongoose": "^8.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,json}": []
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammedkamel/mongoose-collection-name"
  },
  "dependencies": {
    "pluralize": "^8.0.0"
  }
}
